
.nav {
	display: flex;
	flex-wrap: nowrap;
	z-index: 5;
	align-items: center;
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	background-color: #fff;
	box-shadow: 0 -5rpx 5rpx rgba(0,0,0,.02);
}

.nav-item {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	height: 100rpx;
	font-size: 12px;
	color: #666;
}

.nav-icon1,.nav-icon2 {
	width: 50rpx;
	height: 50rpx;
}

.nav-icon2 {
	display: none;
}

.nav-item.active {
	color: #e93939;
}

.nav-item.active .nav-icon1 {
	display: none;
}

.nav-item.active .nav-icon2 {
	display: block;
}

.footer-margin {
	height: 124rpx;
	box-sizing: content-box;
}

.fly-btn {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	height: 100rpx;
	font-size: 12px;
	color: #666;
	position: relative;
}

.fly-zhan {
	width: 50rpx;
	height: 50rpx;
}

.fly {
	width: 88rpx;
	height: 88rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 50%;
	border: 10rpx #fff solid;
	background: #ec3d3f;
	box-shadow: 0 -10rpx 10rpx rgba(0,0,0,.05);
	position: absolute;
	top: -24rpx;
	left: 50%;
	margin-left: -44rpx;
	z-index: 9;
}

.fly-icon {
	width: 32rpx;
	height: 28rpx;
}