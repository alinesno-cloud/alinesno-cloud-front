/*第二种列表*/
.tab-content {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  padding: 0 30rpx 30rpx;
}
.item-wrap {
  margin-top: 20rpx;
  padding: 20rpx;
  width: 296rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

view {
  box-sizing: content-box;
}

.show-img {
  position: relative;
  display: block;
  width: 296rpx;
  height: 296rpx;
}

.sold {
  position: absolute;
  top: 50%;
  left: 50%;
  padding: 0.3em 0.8em;
  background-color: #BBBBBB;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #fff;
  transform: translate(-50%, -50%) rotateZ(-20deg);
}

.title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin: 20rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}

.symbol2 {
  display: inline-block;
  margin-top: 0.3em;
  margin-right: 0.5em;
  border: 2rpx solid #F9604E;
  border-radius: 8rpx;
  overflow: hidden;
  font-size: 20rpx;
}

.symbol2 .a1,
.symbol2 .a2 {
  display: inline-block;
  padding: 0 0.3em;
  line-height: 1.6em;
}

.symbol2 .a1 {
  background-color: #F9604E;
  color: #fff;
}

.symbol2 .a2 {
  background-color: #fff;
  color: #F9604E;
}

.price .current {
  font-size: 34rpx;
  font-weight: bold;
