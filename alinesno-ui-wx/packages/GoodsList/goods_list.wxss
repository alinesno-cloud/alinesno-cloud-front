.like-cut-line {
  position: relative;
  margin: 30rpx auto;
  width: 4em;
  font-size: 32rpx;
  color: #4EA9F6;
}

.like-cut-line::before,
.like-cut-line::after {
  content: "";
  position: absolute;
  top: 50%;
  display: block;
  width: 36rpx;
  height: 2rpx;
  background-color: #4EA9F6;
}

.like-cut-line::before {
  left: 0;
  transform: translateX(-140%);
}

.like-cut-line::after {
  right: 0;
  transform: translateX(140%);
}

