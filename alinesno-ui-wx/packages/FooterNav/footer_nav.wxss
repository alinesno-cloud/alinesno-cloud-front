@import "/app.wxss";

.nav {
 box-sizing: content-box;
}
.nav {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    background-color: #ffffff;
    box-shadow: inset 0px 1rpx 0px 0px #f2f2f2;
    z-index: 2;
}

.nav-item {
    flex: 1;
    flex-wrap: nowrap;
    color: #999999;
    text-align: center;
    font-size: 20rpx;
}

.nav-icon {
    display: block;
    width: 60rpx;
    height: 60rpx;
    margin: 0 auto;
}

.active {
    color: var(--main_bg);
}

.active-icon {
    display: none;
}

.active .normal-icon {
    display: none;
}

.active .active-icon {
    display: block;
}

.yuyue-icon {
    position: absolute;
    top: 0rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 108rpx;
    height: 108rpx;
}



.publish-popup .popup-content {
    top: auto;
    left: 0;
    bottom: 0;
    width: 100%;
    transform: none;
    border-radius: 20rpx;
    background-color: #fff;
    padding: 50rpx 0;
  }
  
  .publish-popup .close-btn {
    width: 70rpx;
    margin: 0 auto;
    margin-top: 100rpx;
    display: block;
  }
  
  .publish-popup .btn {
    flex: 1;
    text-align: center;
    font-size: 20rpx;
    color: #7E7E7E;
  }
  
  .publish-popup .btn image {
    width: 144rpx;
    margin-bottom: 10rpx;
  }
  
  .publish-popup .btn .title {
    font-size: 30rpx;
    color: #222;
  }
  