.reward {
  margin-bottom: 20rpx;
  padding: 50rpx 0;
  background: #e34545;
  text-align: center;
}

.reward-title {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #ff9e9e;
}

.reward-count {
  font-size: 72rpx;
  color: #fff;
  font-weight: bold;
}

.reward-list {
  background: #fff;
}

.reward-list-bar {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  border-bottom: 1rpx #f2f2f2 solid;
}

.reward-list-title {
  flex: 1;
  padding: 0 20rpx 0 50rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 86rpx;
  background: url(data:image/png;base64,) no-repeat left center;
  background-size: 30rpx 36rpx;
}

.reward-screen {
  flex: 1;
  padding-right: 30rpx;
  line-height: 86rpx;
  font-size: 28rpx;
  color: #333;
  text-align: right;
  background: url(data:image/png;base64,) no-repeat right center;
  background-size: 16rpx 10rpx;
}

.reward-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx #f2f2f2 solid;
}

.reward-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.reward-time {
  font-size: 24rpx;
  color: #bbb;
}

.reward-money {
  font-size: 30rpx;
}