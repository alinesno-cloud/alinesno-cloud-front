.deposit-area {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx;
  height: 228rpx;
  color: #fff;
}

view {
  box-sizing: content-box;
}

.deposit-area .bg {
  position: absolute;
  z-index: -1;
  top: 0;
  display: block;
  width: 690rpx;
}

.deposit {
  margin-left: 70rpx;
}

.deposit .title {
  margin-top: 20rpx;
}

.money {
  font-size: 44rpx;
}

.money .s {
  font-size: 28rpx;
}

.recharge-btn {
  display: block;
  margin-left: 60rpx;
  padding: 10rpx 30rpx;
  border: 2rpx solid #fff;
  border-radius: 50rpx;
  font-size: 30rpx;
}

.withdraw-btn {
  display: block;
  margin-right: 70rpx;
  padding: 10rpx 30rpx;
  border: 2rpx solid #fff;
  border-radius: 50rpx;
  font-size: 30rpx;
}

.cut-line {
  position: relative;
  margin: 30rpx auto;
  width: 4em;
  font-size: 32rpx;
  color: var(--main_bg);
}

.cut-line::before,
.cut-line::after {
  content: "";
  position: absolute;
  top: 50%;
  display: block;
  width: 36rpx;
  height: 2rpx;
  background-color: #4EA9F6;
}

.cut-line::before {
  left: 0;
  transform: translateX(-140%);
}

.cut-line::after {
  right: 0;
  transform: translateX(140%);
}

.item {
  display: flex;
  align-items: center;
  margin: 30rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0px 0px 14px rgba(48, 48, 48, 0.1);
}

.item .info {
  flex: 1;
}

.item .title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 28rpx;
  text-overflow: ellipsis;
}

.item .date {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #808080;
}

.item .money {
  margin-left: 20rpx;
}

.item .money.income {
  color: #FE3F10;
}

.item .money.pay {
  color: #07C160;
}