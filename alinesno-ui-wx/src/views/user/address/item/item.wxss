

.shiming {
    margin-bottom: 20rpx;
    background: #fff;
}

.shiming-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    border-bottom: 1px #e6e6e6 solid;
    font-size: 28rpx;
    color: #333;
}

.shiming-in {
    width: 530rpx;
}

.shiming-btn {
    width: 600rpx;
    height: 80rpx;
    margin: 0 auto 20rpx;
    border-radius: 50rpx;
    background: #4EA9F6;
    text-align: center;
    line-height: 80rpx;
    font-size: 32rpx;
    color: #fff;
}

.shouhuo-picker {
    width: 530rpx;
}

.shouhuo-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.shouhuo-dizhi {
    width: 440rpx;
    font-size: 28rpx;
}

.ra-icon {
    width: 14rpx;
    height: 26rpx;
}

.pay-item {
    margin-bottom: 70rpx;
    padding: 0 30rpx;
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-radius: 15rpx;
    background: #fff;
}

.pay-name {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #333;
}

.wechat-icon {
    width: 38rpx;
    height: 38rpx;
    margin-right: 20rpx;
}

.pay-dot1,.pay-dot2 {
    width: 36rpx;
    height: 36rpx;
}

.pay-dot2 {
    display: none;
}

.pay-item.active .pay-dot1 {
    display: none;
}

.pay-item.active .pay-dot2 {
    display: block;
}



.citypicker {}

.citybody {
    position: fixed;
    bottom: 0px;
    background: #fff;
    z-index: 99999;
    width: 100%;
    height: 745rpx;
}

.cityheader {
    position: absolute;
    top: 0px;
    width: 100%;
    z-index: 99999;
}

.city-cancel {
    float: left;
    margin: 20rpx;
    color: #818181;
}

.city-true {
    float: right;
    margin: 20rpx;
    color: #da251d
}

.input {

    width: 530rpx;

}