page {
  background: #f2f2f2;
}

.kill-banner {
  height: 260rpx;
}

.kill-banner-image {
  height: 260rpx;
}

.kill-time {
  display: flex;
  border-bottom: 1px #e6e6e6 solid;
  background: #fff;
}

.kill-time-item {
  flex: 0 0 25%;
  padding-top: 45rpx;
  padding-bottom: 25rpx;
  text-align: center;
  position: relative;
}

.clock {
  display: none;
  width: 24rpx;
  height: 26rpx;
  position: absolute;
  top: 20rpx;
  left: 50%;
  margin-left: -12rpx;
}

.killing {
  font-weight: bold;
  font-size: 36rpx;
  color: #333;
}

.kill-time-p {
  font-size: 26rpx;
  color: #666;
}

.kill-time-item.active:after {
  display: block;
  content: '';
  width: 80%;
  height: 5rpx;
  background: -webkit-linear-gradient(left, #f03e34, #fd8b39);
  background: -o-linear-gradient(right, #f03e34, #fd8b39);
  background: -moz-linear-gradient(right, #f03e34, #fd8b39);
  background: linear-gradient(to right, #f03e34, #fd8b39);
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -40%;
}

.kill-time-item.active .clock {
  /* display: block; */
}

.kill-time-item.active .killing {
  color: #f03e34;
}

.kill-time-item.active .kill-time-p {
  color: #fd8b39;
}

.timing-tit {
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
}

.timing-tit-p {
  font-size: 28rpx;
  color: #333;
}

.timing {
  display: flex;
  align-items: center;
}

.timing-p {
  margin-right: 15rpx;
  font-size: 26rpx;
  color: #666;
}

.timing-box {
  width: 160rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.t-item {
  width: 44rpx;
  height: 45rpx;
  position: relative;
}

.time-peper {
  width: 44rpx;
  height: 45rpx;
}

.t-item-bb {
  width: 44rpx;
  height: 45rpx;
  text-align: center;
  line-height: 45rpx;
  font-size: 26rpx;
  color: #333;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
}

.t-mao {
  width: 14rpx;
  height: 45rpx;
  text-align: center;
  line-height: 45rpx;
  font-size: 26rpx;
  color: #666;
}

.t-item:last-child .t-item-bb {
  color: #f00;
}

.rush-item {
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
}

.rush-img {
  width: 200rpx;
  height: 200rpx;
}

.rush-image {
  width: 200rpx;
  height: 200rpx;
}

.rush-info {
  width: 470rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.rush-name {
  font-size: 28rpx;
  line-height: 48rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.kill-step {
  display: flex;
  align-items: center;
}

.kill-persent {
  width: 140rpx;
  height: 10rpx;
  margin-right: 20rpx;
  border-radius: 50rpx;
  background: #e6e6e6;
}

.kill-persent-stuff {
  width: 100%;
  height: 10rpx;
  border-radius: 50rpx;
  background: -webkit-linear-gradient(left, #f03e34, #fd8b39);
  background: -o-linear-gradient(right, #f03e34, #fd8b39);
  background: -moz-linear-gradient(right, #f03e34, #fd8b39);
  background: linear-gradient(to right, #f03e34, #fd8b39);
}

.kill-persent-p {
  font-size: 25rpx;
  color: #999;
}

.limited-price {
  font-size: 32rpx;
  color: #ff1919;
}

.limited-price .small {
  font-size: 24rpx;
}

.old-price {
  font-size: 20rpx;
  color: #999;
  text-decoration: line-through;
}

.rush-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.rush-done,.rush-btn {
  width: 160rpx;
  height: 60rpx;
  border-radius: 15rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #fff;
}

.rush-done {
  background: #b3b3b3;
}

.rush-btn {
  background: #f03e34;
}