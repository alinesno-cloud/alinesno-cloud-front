@import "/pages/goods/item/item.wxss";


.pro-btn2{
 width: 100%;
}
.pro-btm-left {
  width: 140rpx;
}
.pro-btm-right {
  width: 700rpx;
}
/*banner*/

.banner-wrap {
  position: relative;
}

.detail-banner {
  height: 768rpx;
}

.detail-banner image {
  display: block;
  width: 650rpx;
  height: 682rpx;
  margin: 0 auto;
}

.banner-num {
  position: absolute;
  bottom: 28rpx;
  right: 44rpx;
  width: 80rpx;
  text-align: center;
  line-height: 44rpx;
  height: 44rpx; 
  border-radius: 200rpx;
  color: #fff;
  font-size: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 2;
}


/*秒杀*/

.top-price {
  position: relative;
  padding: 45rpx 26rpx 16rpx;
  color: #fff;
  font-size: 28rpx;
    /* background:var(--main_bg); */

}

.top-price .price-symbol {
  font-size: 20rpx;
}

.top-price .price {
  margin-left: 20rpx;
  font-size: 34rpx;
  font-weight: bold;
}

.top-price .priced {
  color: #fff;
  font-size: 24rpx;
  font-weight: normal;
  margin-left: 20rpx;    text-decoration: line-through;
}

.top-price .sales {
  position: absolute;
  top: 12rpx;
  right: 26rpx;
  font-size: 20rpx;
}

.top-price .time-item {
  position: relative;
  z-index: 2;
  margin-left: auto;
  font-size: 22rpx;
}

.top-price .countdown {
  color: #fff;
}

.top-price .countdown .cell {
  background-color: #fff;
  color: #F9604E;
}

.top-price .countdown .cell:nth-child(1) {
  margin-left: 10rpx;
}

.price-bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.lingquan{
  float: right;
  background: #4EA9F6;
  color: #fff;
  padding: 5rpx 37rpx;
  font-size: 26rpx;
  border-radius: 28rpx;
}



.share-btn {
  width: 90rpx;
  font-size: 22rpx;
    text-align: center;
    position: absolute;
    top: 0rpx;
    right: 24rpx;
}

.share-btn image {
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto 4rpx auto;
}


.pro-qr {
  width: 660rpx;
  position: fixed;
  top: 20rpx;
  left: 50%;
  margin-left: -330rpx;
  z-index: 981;
}

.qr-image {
  margin-bottom: 20rpx;
  width: 660rpx;
  height: 940rpx;
}

.save-btn {
  width: 100%;
  height: 90rpx;
  border-radius: 10rpx;
  background: #f32224;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
}
