@import "/css/attr.wxss";

.user-item {
	flex-wrap: nowrap;
	padding: 15rpx 30rpx;
	box-sizing: border-box;
}
.user-head {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	margin-right: 20rpx;
}
.username {
	font-size: 28rpx;
	margin-bottom: 10rpx;
}
.user-time {
	font-size: 20rpx;
	color: #999;
}
.user-money {
	margin-left: auto;
	font-size: 28rpx;
}
.bargain-item {
	overflow: hidden;
	box-sizing: border-box;
}
.inprogress-item {
	background-color: #f2f2f2;
	border-radius: 20rpx;
}
.inprogress-title {
	height: 60rpx;
	background-color: #ff9b25;
	line-height: 60rpx;
	text-align: center;
	font-size: 28rpx;
	color: #fff;
}
.content {
	padding: 30rpx 20rpx;
	box-sizing: border-box;
	align-items: flex-start;
}
.bargain-img {
	width: 220rpx;
	height: 220rpx;
	background-color: #00611e;
}
.inprogress-item .bargain-img {
	width: 200rpx;
	height: 200rpx;
	border-radius: 20rpx;
}
.inprogress-item .content-text {
	height: 200rpx;
}
.inprogress-item .time-wrap {
	margin-top: 15rpx;
}
.inprogress-item .content .content-bottom {
	width: 101%;
	font-size: 24rpx;
	color: #ff0000;
}
.tag {
	width: 141rpx;
	height: 48rpx;
	margin-left: auto;
	text-align: center;
	line-height: 48rpx;
	font-size: 24rpx;
	background-color: #fdce03;
	color: #333;
	border-radius: 24rpx 0rpx 0rpx 24rpx;
}
.content-text {
	height: 220rpx;
	position: relative;
	padding-left: 16rpx;
  width: 530rpx;
}
.shop-name {
  font-size: 28rpx;
  line-height: 44rpx;
}

.shop-name2 {
  font-size: 22rpx;
  line-height: 44rpx;
  color: #666;
}

.shop-name3 {
  position: absolute;
  bottom: 60rpx;
  font-size: 22rpx;
  text-decoration: line-through;
  width: calc(100% - 16rpx);
  left: 16rpx;  color: #666;

}
.money {
	font-size: 24rpx;
	color: #666;
	margin-top: 23rpx;
}
.money text {
	color: #f00;
}
.content-bottom {
	position: absolute;
	bottom: 0;
	width: calc(100% - 16rpx);
	left: 16rpx;
}
.time-wrap {
	font-size: 20rpx;
}
.time-wrap text {
	padding: 2rpx 7rpx;
	font-size: 24rpx;
	color: #fff;
	background-color: #666666;
	border-radius: 4rpx;
	margin: 0 8rpx;
}
.bargain-btn {
	width: 161rpx;
	height: 60rpx;
	text-align: center;
	line-height: 60rpx;
	margin-left: auto;
	font-size: 28rpx;
	color: #fff;
	background-color: #cc2b00;
	border-radius: 4rpx;
}
.item-num {
	font-size: 20rpx;
	color: #ff3600;
}
.item-num text {
	font-size: 32rpx;
}
page {
	background-color: #cc2b00;
}
.bg {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
}
.page-content {
	position: relative;
	z-index: 1;
	width: 691rpx;
	margin: 40rpx auto;
	background-color: #ffffff;
	border-radius: 20rpx;
}
.header {
	padding: 0 20rpx;
	box-sizing: border-box;
	border: 1px solid transparent;
}
.header .bargain-item {
	margin: 25rpx 0;
}
.head-text {
	font-size: 28rpx;
	text-align: center;
}
.head-text text {
	color: #f00;
}
.progress-bar {
	height: 20rpx;
	background-color: #e6e6e6;
	border-radius: 10rpx;
	margin: 15rpx 0 36rpx 0;
	position: relative;
}
.inner-bar {
	position: absolute;
	left: 0;
	top: 0;
	height: 100%;
	background-color: #fdce03;
	border-radius: 10rpx;
}
.head-btn {
	position: relative;
	height: 87rpx;
	background-color: #b82700;
	border-radius: 40rpx;
	text-align: center;
	margin-bottom: 36rpx;
	line-height: 80rpx;
	font-size: 32rpx;
	color: #fff;
}
.head-btn text {
	position: relative;
	z-index: 2;
}
.head-btn::after {
	content: '';
	z-index: 1;
	position: absolute;
	left: 0;
	top: 0;
	height: 80rpx;
	width: 100%;
	background-color: #CC2B00;
	border-radius: 40rpx;
}
.user-list {
	background: #fff;
	height: 340rpx;
}
.user-money text {
	color: #f00;
	margin-left: 5rpx;
}
.title {
	padding: 30rpx;
	box-sizing: border-box;
	font-size: 28rpx;
	font-weight: bold;
}
.success-popup .popup-content {
	width: 500rpx;
	box-sizing: border-box;
	text-align: center;
	background-color: #ffffff;
	border-radius: 20rpx;
}
.close-btn {
	font-size: 54rpx;
	color: #B2B2B2;
	position: absolute;
	right: 10rpx;
	top: 11rpx;
}
.success-title {
	font-size: 24rpx;
	margin: 50rpx 0 30rpx 0;
}
.success-price {
	font-size: 60rpx;
	margin-bottom: 57rpx;
	color: #f00;
}
.success-price text {
	font-size: 24rpx;
	
}
.success-btn {
	width: 300rpx;
	height: 70rpx;
	text-align: center;
	line-height: 70rpx;
	background-color: #cc2b00;
	border-radius: 35rpx;
	font-size: 28rpx;
	color: #fff;
	margin: 0 auto;
	margin-bottom: 20rpx;
}
.invite-btn {
	background-color: #ffffff;
	border: solid 1rpx #b3b3b3;
	color: #CC2B00;
	margin-bottom: 35rpx;
}

