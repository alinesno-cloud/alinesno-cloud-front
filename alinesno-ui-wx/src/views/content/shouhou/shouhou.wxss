.head-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: -1;
}

.list {
  width: 690rpx;
  height: 500rpx;
  overflow-y: scroll;
  border-radius: 8rpx;
  background-color: #fff;
  margin: 46rpx auto;
  padding: 0 40rpx;
  padding-bottom: 32rpx;
}

.title {
  color: #4EA9F6;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.red-title {
  color: #F9604E;
  font-size: 32rpx;
  padding-bottom: 26rpx;
}

.item {
  font-size: 28rpx;
  padding: 20rpx 0;
  border-top: 1px dashed #EeEeEe;
  border-bottom: 1px dashed #EeEeEe;
}

.arrow-btn {
  width: 45rpx;
  height: 45rpx;
  margin-left: auto;
}

.date {
  width: 254rpx;
  background-color: #BDBDBD;
  font-size: 24rpx;
  margin: 0 auto;
  color: #fff;
  padding: 2rpx 0;
  text-align: center;
  border-radius: 4rpx;
}

.user-dialog,
.contact-dialog {
  margin: 40rpx 0;
  padding: 0 30rpx;
}

.user-img {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
}

.msg {
  padding: 22rpx 42rpx;
  border-radius: 10rpx;
  margin: 0 22rpx;
  font-size: 28rpx;
}

.user-dialog {
  justify-content: flex-end;
}

.contact-dialog {
  justify-content: flex-start;
}

.user-dialog .msg {
  background-color: #B6D4F4;
}

.contact-dialog .msg {
  background-color: #fff;
}

.lxkf{

  position:fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background:#4EA9F6 ;
}