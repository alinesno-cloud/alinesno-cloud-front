
page {
  background-color: #f8f8f8;
}


.header {
  position: relative;
  background-color: #fff;
}

.head-bg {
  position: absolute;
  top: -18.95px;
  left: 0;
  width: 100%;
  height: 441rpx;
}

.logo {
  position: relative;
  width: 290rpx;
  margin-left: 60rpx;
  display: block;
  padding-top: 20rpx;

}

.search-wrap {
  position: relative;
  width: 690rpx;
  margin: 36rpx auto;
  height: 50rpx;
  background-color: #F7F8FC;
  border-radius: 200rpx;
  justify-content: center;
}

.search-wrap .icon {
  width: 40rpx;
  height: 40rpx;
}

.search-wrap input {
  font-size: 28rpx;
  max-width: 80%;
  transform: translateX(30%);
}

.notice {
  position: relative;
  z-index: 1;
  padding: 20rpx 32rpx;
  background-color: #fff;
}

.notice-text {
  width: 120rpx;
  margin-right: 4rpx;
}

.notice-icon {
  width: 40rpx;
  margin-right: 14rpx;
}

.notice-swiper {
  flex-grow: 1;
  height: 30rpx;
  font-size: 26rpx;
  color: #7E7E7E;
}

.banner {
  width: 690rpx;
  height: 340rpx;
  margin: 36rpx auto;
}

.banner image {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.banner .wx-swiper-dots.wx-swiper-dots-horizontal {
  border-radius: 20rpx;
}

.banner .wx-swiper-dot {
  width: 20rpx;
  display: inline-flex;
  height: 4rpx;
  justify-content: space-between;
  margin: 0;
  margin: -16rpx;
}

.banner .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: rgba(255, 255, 255, 0.57);
  border-radius: 0;
}

.banner .wx-swiper-dot-active::before {
  background: #fff;
}

.info-list {
  position: relative;
  padding: 10rpx 30rpx;
}

.info-list-item {
  flex: 1;
  justify-content: center;
  font-size: 24rpx;
  color: #666666;
}

.info-list-item image {
  width: 32rpx;
  margin-right: 6rpx;
}

.menu-list {
  padding: 30rpx;
  flex-wrap: wrap;
  border-radius: 0 0 20rpx 20rpx;
  background-color: #fff;
}

.menu-list-item {
  font-size: 24rpx;
  width: 25%;
  justify-content: center;
  text-align: center;
  margin-bottom: 20rpx;
}

.menu-list-item image {
  display: block;
  width: 92rpx;
  margin: 0 auto 8rpx;
}

.new_timg {
  width: 100%;
  height: 100%;
}

.show {
  border-radius: 20rpx;
  background-color: #fff;
  overflow: hidden;
  height: 350rpx;
}
.show-right {
 height:350rpx;
}
.show-left,
.show-right {
  width: 50%;
  overflow: hidden;
}

.show-left {
  border-right: 1px solid #f8f8f8;
  height: 274rpx;
}

.show-left.show-item {
  /* padding: 30rpx; */
  /* height: 500rpx; */
}

.show-left .show-img {
  width: 180rpx;
}

.show-right .show-item {
  /* padding: 22rpx 35rpx 0; */
  overflow: hidden;
  height: 170rpx;
}

.show-right .show-item:nth-child(1) {
  border-bottom: 1px solid #f8f8f8;
}

.show-right .show-img {
  width: 106rpx;
}

.show-item {
  position: relative;
}

.show-img {
  position: absolute;
  bottom: -15rpx;
  right: 28rpx;
}

.show-name {
  font-size: 32rpx;
  font-weight: bold;
}

.show-tips {
  font-size: 28rpx;
  color: #f9604e;
}

.show-btn {
  width: 80rpx;
  margin-top: 25rpx;
}

.adver-img {
  display: block;
  width: 100%;
  margin: 20rpx auto;
}

.tab {
  flex-wrap: wrap;
  background-color: #fff;
  padding: 30rpx 25rpx 0;
  border-radius: 0 0 20rpx 20rpx;
}

.tab-item {
  font-size: 28rpx;
  color: #7E7E7E;
  width: 20%;
  padding: 8rpx 0;
  text-align: center;
  margin-bottom: 20rpx;
}

.tab .active {
  border: 1px solid #4ea9f6;
  border-radius: 200rpx;
  color: #4EA9F6;
}

.pro-list {
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx 30rpx 0;
}

.pro-list .pro-item {
  width: 330rpx;
  margin-bottom: 28rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.pro-list .pro-img {
  width: 100%;
  height: 300rpx;
}

.pro-list .pro-name {
  font-size: 28rpx;
  line-height: 1.5em;
  padding: 12rpx;
}

.pro-list .tag-list {
  padding: 0 10rpx;
}

.pro-list .tag {
  padding: 2rpx 10rpx;
  font-size: 20rpx;
  color: #F9604E;
  margin-right: 14rpx;
  border-radius: 4rpx;
  border: 1px solid #f9604e;
}

.pro-list .tag.red {
  background-color: #F74833;
  color: #fff;
}

.pro-list .pro-bottom {
  padding: 10rpx 10rpx 18rpx 18rpx;
}

.pro-list .pro-price {
  color: #F74833;
  font-weight: bold;
  font-size: 34rpx;
}

.pro-list .old-price {
  font-size: 28rpx;
  color: #BBBBBB;
  text-decoration: line-through;
  margin-left: 12rpx;
}

.pro-list .pro-btn {
  width: 60rpx;
  margin-left: auto;
}

.pro-list .symbol {
  font-size: 24rpx;
}


.nav {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.nav-item {
  width: 25%;
  padding: 20rpx 0;
  text-align: center;
  position: relative;
}

.n-icon {
  width: 110rpx;
  height: 110rpx;
  margin-bottom: 20rpx;
}

.nav-p {
  font-size: 28rpx;
  color: #333;
}
