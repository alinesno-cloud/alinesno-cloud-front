page {
  background-color: #f8f8f8;
}
/*ç©º*/

.head {
  background-color: #fff;
  padding: 94rpx 80rpx;
  text-align: center;
}

.head .none-pro-img {
  display: block;
  margin: 0 auto;
  width: 400rpx;
  margin-bottom: 20rpx;
  
}

.head .title {
  font-size: 30rpx;
}

.pro-wrap {
  white-space: nowrap;
}

.pro-wrap .pro-container {
  display: inline-block;
  width: 100vw;
}

.pro-wrap .delete-btn {
  display: inline-block;
  width: 140rpx;
  height: 280rpx;
  line-height: 280rpx;
  background: var(--main_bg);
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  opacity: 1;
  border-radius: 0px 20rpx 20rpx 0px;
}

.cart-item {
  padding: 28rpx 0;
  border-radius: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.store {
  font-size: 28rpx;
  padding: 0 14rpx;
}

.store .select-wrap {
  margin-right: 32rpx;
  transform: translateY(8rpx);
}

.store .store-icon {
  width: 50rpx;
  margin-right: 10rpx;
}

.store .arrow-btn {
  width: 30rpx;
  margin-left: 8rpx;
}

.pro-item {
  width: 100vw;
  align-content: flex-start;
  flex-wrap: nowrap;
  padding: 20rpx 30rpx 0 14rpx;
}

.pro-img {
  width: 200rpx;
  height: 200rpx;
}

.pro-text {
  width: calc(100% - 260rpx);
  padding-left: 16rpx;
  white-space: pre-wrap;
}

.pro-name {
  font-size: 32rpx;
  line-height: 1.5em;
}

.pro-name .tag {
  display: inline-block;
  margin-right: 15rpx;
  padding: 6rpx 13rpx;
  border-radius: 4rpx;
  line-height: 1em;
  font-size: 20rpx;
  color: #fff;
  background-color: #F74833;
  transform: translateY(-3rpx);
}
.pro-num{
  padding-right: 35rpx;
}
.pro-introduction {
  display: inline-block;
  padding: 2rpx 16rpx;
  background-color: #f2f2f2;
  border-radius: 30rpx;
  font-size: 20rpx;
  margin: 8rpx 0;
}

.pro-bottom {
  padding: 10rpx 10rpx 18rpx 18rpx;
}

.pro-price {
  color: #F74833;
  font-weight: bold;
  font-size: 34rpx;
}

.old-price {
  font-size: 28rpx;
  color: #BBBBBB;
  text-decoration: line-through;
  margin-left: 12rpx;
}

.pro-btn {
  width: 60rpx;
  margin-left: auto;
}

.symbol {
  font-size: 24rpx;
}

.operation {
  border-radius: 10rpx;
  margin-left: auto;
  height: 60rpx;
  overflow: hidden;
  border: 1px solid #E7EAEC;
}

.operation .reduce,
.operation .add {
  font-size: 30rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.operation .reduce.reduce,
.operation .add.reduce {
  border-right: 1px solid #E7EAEC;
}

.operation input {
  width: 74rpx;
  font-size: 30rpx;
  text-align: center;
  border-right: 1px solid #e7eaec;
}

.buy-nav {
  bottom: 100rpx;
}

.buy-nav .select-wrap {
  margin-right: 36rpx;
}

.buy-nav .total {
  margin-left: 48rpx;
}

.buy-nav .total text {
  color: #F9604E;
  font-size: 32rpx;
  font-weight: bold;
}

.buy-nav .total .symbol {
  font-size: 24rpx;
}

.buy-nav .nav-btn {
  width: 228rpx;
  height: 80rpx;
  margin-left: auto;
  line-height: 80rpx;
  text-align: center;
  background-color: var(--main_bg);
  color: #fff;
  font-size: 30rpx;
  border-radius: 60rpx;
}
