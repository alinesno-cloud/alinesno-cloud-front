page {
  background-color: #f8f8f8;
}

.header {
  position: relative;
  padding: 20rpx 0;
  background-color: #fff;
}

.head-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 240rpx;
}

.banner {
  width: 690rpx;
  height: 240rpx;
  margin: 26rpx auto;
}

.banner image {
  display: block;
  width: 100%;
  height: 240rpx;
  border-radius: 15rpx;
}

.menu-list {
  padding: 30rpx;
  border-radius: 0 0 20rpx 20rpx;
  background-color: #fff;
}

.menu-list-item {
  font-size: 24rpx;
  width: 20%;
  justify-content: center;
  text-align: center;
}

.menu-list-item image {
  display: block;
  width: 92rpx;
  margin: 0 auto 8rpx;
}

.hot {
  border-radius: 20rpx;
  padding: 10rpx 20rpx 20rpx;
  background-color: #fff;
}

.hot .hot-list {
  padding: 20rpx 30rpx 30rpx;
  white-space: nowrap;
}

.hot-list-item {
  width: 33.3333%;
  display: inline-block;
  text-align: center;
}


.hot-img {
  display: block;
  width: 90%;
  margin: 0 auto;
  height: 210rpx;
  
}

.hot-name {
  font-size: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 66rpx;
  padding: 0;
  margin: 12rpx;
  text-align: center;
  white-space: pre-wrap;
}


.hot-price {
  font-size: 32rpx;
  color: #F74833;
}

.hot .symbol {
  font-size: 16rpx;
}

.hot .pro-bottom {
  padding: 10rpx 10rpx 18rpx 18rpx;
  justify-content: center;
}

.hot .pro-price {
  color: #F74833;
  font-weight: bold;
  font-size: 24rpx;
}

.hot .old-price {
  font-size: 20rpx;
  font-weight: normal;
  color: #BBBBBB;
  text-decoration: line-through;
  margin-left: 12rpx;
}

.title {
  font-size: 30rpx;
}

.title-icon {
  width: 60rpx;
}

.title-btn {
  margin-left: auto;
  font-size: 24rpx;
  color: #bbb;
}

.title-btn image {
  width: 40rpx;
}

.tab-swiper::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.swiper-tab-item {
  flex: 1;
  white-space: nowrap;
}

.tab-swiper {
  height: 90rpx;
  padding: 0 40rpx;
  white-space: nowrap;
  margin-bottom: 20rpx;
  background-color: #ffffff;
}

.swiper-tab-item {
  position: relative;
  line-height: 90rpx;
  font-size: 28rpx;
  text-align: center;
}

.swiper-tab-item.active {
  color: #4EA9F6;
}

.swiper-tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 96rpx;
  height: 4rpx;
  background-color: #4EA9F6;
  border-radius: 3rpx;
}

.pro-list {
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx 30rpx 0;
}

.pro-list .pro-item {
  width: 330rpx;
  margin-bottom: 28rpx;
  border-radius: 20rpx;
  padding-top: 20rpx;
  background-color: #fff;
}

.pro-list .pro-img {
  width: 100%;
  height: 300rpx;
}

.pro-list .pro-name {
  font-size: 28rpx;
  line-height: 1.5em;
  padding: 12rpx;
}

.pro-list .tag-list {
  padding: 0 10rpx;
}

.pro-list .tag {
  padding: 2rpx 10rpx;
  font-size: 20rpx;
  color: #F9604E;
  margin-right: 14rpx;
  border-radius: 4rpx;
  border: 1px solid #f9604e;
}

.pro-list .tag.red {
  background-color: #F74833;
  color: #fff;
}

.pro-list .pro-bottom {
  padding: 10rpx 10rpx 18rpx 18rpx;
}

.pro-list .pro-price {
  color: #F74833;
  font-weight: bold;
  font-size: 34rpx;
}

.pro-list .old-price {
  font-size: 28rpx;
  color: #BBBBBB;
  text-decoration: line-through;
  margin-left: 12rpx;
}

.pro-list .pro-btn {
  width: 60rpx;
  margin-left: auto;
}

.pro-list .symbol {
  font-size: 24rpx;
}
