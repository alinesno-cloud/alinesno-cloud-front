/* pages/classify/index.wxss */
page{background:#fff;}
.header{background:#fff;}

.search_wrap{ height: 100rpx; padding: 0 30rpx; display: flex; align-items: center; }
.search_box{flex: 1; height: 74rpx; padding: 0 70rpx; border-radius: 37rpx; background: #f7f7f7; position: relative;}
.search_box input{ width: 100%; height: 74rpx; font-size: 28rpx; color: #555;}
.search_box .search_ico{ width: 36rpx; height: 36rpx; position: absolute; left: 25rpx; top: 50%; margin-top: -18rpx;}
.search_box .search_ico image{width: 36rpx; height: 36rpx;}

.coupon_wrap{ height: 78rpx; padding: 0 30rpx; display: flex; justify-content: space-between; align-items: center;}
.coupon_title{font-size: 34rpx; font-weight: bold; }
.coupon_title text{font-size: 24rpx; color: #f21818; margin-left: 10rpx;}
.coupon_tag{ width: 76rpx; height: 40rpx; border-radius: 4rpx; position: relative; font-size: 24rpx; color: #da6d0e; display: flex; justify-content: center; align-items: center; background: linear-gradient(to right, #ffd593 0%,#ff923a 100%);}
.tagyuan{ width: 14rpx; height: 14rpx; border-radius: 50%; background: #fff; position: absolute; top: 50%; margin-top: -7rpx; }
.tagyuan1{left: -7rpx;}
.tagyuan2{right: -7rpx;}

.classify{width:100%;display:flex;background:#fff;}
.classify-left{width:180rpx;height:100%;background:#fff;}
.classify-left-scroll{height:100%;}
.classify-link{height:100rpx;display:flex;justify-content:center;align-items:center;font-size:28rpx;color:#333;position:relative;}
.classify-link.active{color:var(--main_bg);background:#f2f2f2;}
.classify-link.active:after{display:block;content:'';width:6rpx;height:44rpx;background:var(--main_bg);position:absolute;top:50%;left:0;margin-top:-22rpx;}
.classify-right{width:570rpx;height:100%;background:#f2f2f2;}
.classify-right-scroll{height:100%;}
.classify-list{padding:0rpx 20rpx 30rpx;}

.classify-title{ height: 100rpx; display: flex; justify-content: space-between; align-items: center;}
.classifyname{font-size: 28rpx; font-weight: bold;}
.classifysort{ width: 150rpx; height: 54rpx; border-radius: 27rpx; background: #fff; position: relative;}
.pickertext{font-size: 24rpx; color: #666; line-height: 54rpx; padding-left: 20rpx;}
.pickerarrow{ width: 26rpx; height: 26rpx; position: absolute; right: 15rpx; top: 10rpx;}
.pickerarrow image{width: 26rpx; height: 26rpx; transform: rotate(180deg)}

.goods_listwrap{display: flex; flex-wrap: wrap; justify-content: space-between;}
.goods_item{ width: 260rpx; height: 424rpx; overflow: hidden;background: #fff;}
.goods_pict{ height: 256rpx; overflow: hidden;}
.goods_pict image{ width: 260rpx; height: 256rpx;}
.goods_des{ padding: 10rpx 12rpx 0; line-height: 32rpx; font-size: 24rpx; font-weight: bold;}
.goods_pricebox{padding: 10rpx 12rpx 0; height: 75rpx; display: flex; justify-content: space-between; align-items: center;}
.pricebox view:first-child{font-size: 34rpx; color: #f21818; font-weight: bold;}
.pricebox view:first-child text{font-size: 24rpx;}
.pricebox view:last-child{font-size: 24rpx; color: #a3a6a3; text-decoration: line-through;}
.intocart image{ width: 48rpx; height: 48rpx;}
