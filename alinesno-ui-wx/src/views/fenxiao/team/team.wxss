


.fans {
  padding: 20rpx 0 0;
  margin-bottom: 20rpx;
  background: #f2f2f2;
}

.fans-tab {
  margin: 0 auto;
  margin-bottom: 20rpx;
  width: 280rpx;
  height: 60rpx;
  display: flex;
  border-radius: 15rpx;
  overflow: hidden;
}

.fans-tab-item {
  width: 140rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #333;
  background: #fff;
}

.fans-tab-item.active {
  background: #4c4491;
  color: #fff;
}

.fans-item {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px #e6e6e6 solid;
  background: #fff;
}

.fans-man {
  width: 260rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.fans-img {
  width: 78rpx;
  height: 78rpx;
  border-radius: 50%;
  overflow: hidden;
}

.fans-image {
  width: 78rpx;
  height: 78rpx;
}

.fans-info {
  width: 160rpx;
}

.fans-name {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.fans-time {
  font-size: 20rpx;
  color: #666;
}

.fans-count {
  width: 160rpx;
}

.fans-p {
  font-size: 20rpx;
  color: #666;
}

.fans-num {
  font-size: 32rpx;
  color: #f00;
}



.search-bar {
  padding: 15rpx 30rpx;
  background: #fff;
}

.search-in {
  width: 100%;
  height: 72rpx;
  border-radius: 10rpx;
  background: #f2f2f2;
  text-align: center;
  font-size: 28rpx;
}