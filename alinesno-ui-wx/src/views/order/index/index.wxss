.shouyi-tab {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 980;
}

.shouyi-tab-item {
  width: 120rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.ms_act{
  background: red;
  color: #fff;
  font-size: 28rpx;
  padding: 0 10rpx;
}

.shouyi-tab-item.active:after {
  display: block;
  content: '';
  width: 30rpx;
  height: 8rpx;
  border-radius: 50rpx;
  background: #4EA9F6;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -15rpx;
}

.shouyi-tab-margin {
  height: 90rpx;
  margin-bottom: 20rpx;
}

.o-list {
  margin-bottom: 20rpx;
  background: #fff;
}

.o-item {
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
}

.o-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.o-image {
  width: 160rpx;
  height: 160rpx;
}

.o-info {
  width: 500rpx;
}

.o-name {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.o-type {
  margin-bottom: 25rpx;
  font-size: 28rpx;
  color: #666;
}

.o-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.o-price {
  font-size: 30rpx;
  color: #f00;
}

.o-num {
  font-size: 30rpx;
  color: #333;
}

.order-item {
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.order-tit {
  padding-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-num {
  font-size: 24rpx;
  color: #666;
}

.order-stu {
  font-size: 28rpx;
  color: #f32224;
}

.order-bar {
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px #e6e6e6 solid;
}

.order-count {
  font-size: 24rpx;
  color: #999;
}

.order-price {
  font-size: 24rpx;
  color: #f00;
}

.order-btn {
  display: flex;
}

.order-btn1,.order-btn2 {
  height: 60rpx;
  margin-left: 10rpx;
  border-radius: 6rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
  padding: 1rpx 20rpx;
}

.order-btn1 {
  border: 1px #e6e6e6 solid;
  color: #333;
}

.order-btn2 {
  background: #f32224;
  color: #fff;
}