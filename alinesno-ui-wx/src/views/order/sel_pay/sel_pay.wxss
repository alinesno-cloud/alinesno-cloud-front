.waiting {
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #06BB60;
  color: #fff;
}

.waiting-title {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
}

.clock-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}

.waiting-p {
  margin: 30rpx 0;
  font-size: 28rpx;
}

.waiting-p .big {
  font-size: 64rpx;
  font-weight: bold;
}

.waiting-btn {
  width: 220rpx;
  height: 64rpx;
  border-radius: 50rpx;
  background-color: #fff;
  text-align: center;
  line-height: 64rpx;
  font-size: 32rpx;
  color: #06BB60;
}

.least-time {
  width: 374rpx;
  height: 64rpx;
  border-radius: 50rpx;
  background-color: rgba(0,0,0,.1);
  text-align: center;
  line-height: 64rpx;
  font-size: 32rpx;
  color: #fff;
}

.settlement-wrap {
  width: 100%;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  background-color: #fff;
  box-shadow: 0 -10rpx 10rpx rgba(0,0,0,.05);
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 20;
}

.settlement {
  padding: 30rpx;
}

.settlement-btn {
  width: 100%;
  height: 90rpx;
  margin-bottom: 20rpx;
  border-radius: 50rpx;
  background: -webkit-linear-gradient(left, #33CB53, #06BB60);
  background: -o-linear-gradient(right, #33CB53, #06BB60);
  background: -moz-linear-gradient(right, #33CB53, #06BB60);
  background: linear-gradient(to right, #33CB53, #06BB60);
  text-align: center;
  line-height: 90rpx;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}

.settlement-margin {
  height: 200rpx;
  box-sizing: content-box;
}

.tips {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #333;
}

.hongbao {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.pay-item {
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
  border-bottom: 1px #e6e6e6 solid;
}

.pay-left {
  display: flex;
  align-items: center;
}

.pay-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.pay-p {
  font-size: 32rpx;
  color: #333;
}