.produce-info {
  display: flex;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #F2F2F2;
}

.produce-info .show-img {
  display: block;
  margin-right: 20rpx;
  width: 200rpx;
  height: 200rpx;
}

.produce-info .right-side {
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
  align-items: flex-start;
}

.produce-info .title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.produce-info .data {
  margin-top: 20rpx;
  padding: 0.2em 0.8em;
  background-color: #F2F2F2;
  border-radius: 1em;
  font-size: 20rpx;
}



.area {
  margin: 30rpx 0;
  padding: 0 30rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #7E7E7E;
}

.area .stress {
  color: #222;
}

.area .arrow {
  display: block;
  margin-left: 10rpx;
  height: 36rpx;
}

.row {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  /* border-bottom: 2rpx solid #dddddd; */
}

.row:last-of-type {
  border: none;
}

.row.cause {
  padding-top: 10rpx;
}

.row.cause .content,
.row.way .content {
  display: flex;
  align-items: center;
}

.row.status {
  display: block;
}

.row.status .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  width: 100%;
}

.row.status .radio-wrap {
  display: flex;
}

.row.status .radio {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.row.status .radio .icon {
  width: 60rpx;
}


.row.status .content {
  padding: 30rpx;
  border-radius: 20rpx;
  background-color: #F5F5F5;
}

.row.status .content .textarea {
  margin-bottom: 30rpx;
  width: 630rpx;
  height: 200rpx;
  font-size: 28rpx;
  line-height: 1.4em;
}


.upload-img {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}

.upload-img .img {
  position: relative;
  display: block;
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
}

.upload-img .img:nth-of-type(n+5) {
  margin-top: 24rpx;
}

.upload-img .img.padding {
  width: 150rpx;
  height: 0;
}

.upload-img .close {
  position: absolute;
  z-index: 1;
  top: 0; right: 0;
  display: block;
  width: 50rpx;
  height: 50rpx;
  transform: translate(50%, -50%);
}

.confirm-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 50rpx auto 100rpx;
  width: 600rpx;
  height: 80rpx;
  border-radius: 80rpx;
  background-color: #4EA9F6;
  font-size: 30rpx;
  color: #fff;
}


.feedback-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.feedback-item {
  width: 180rpx;
  height: 56rpx;
  margin-bottom: 35rpx;
  border-radius: 6rpx;
  background: #e6e6e6;
  text-align: center;
  line-height: 56rpx;
  font-size: 28rpx;
  color: #333;
}

.feedback-list:after {
  display: block;
  content: '';
  width: 180rpx;
}

.feedback-item.active {
  background: #e71f1a;
  color: #fff;
}
