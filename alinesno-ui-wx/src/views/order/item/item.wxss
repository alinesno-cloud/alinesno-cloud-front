.bg {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 280rpx;
  background-color: #4EA9F6;
}

.state-info {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx 80rpx;
  height: 200rpx;
  color: #fff;
}

.state-info .state {
  font-size: 38rpx;
}

.state-info .tip,
.state-info .date {
  font-size: 24rpx;
}



.wp.payer-info {
  margin: 0 30rpx;
  background-color: #fff;
  border-radius: 30rpx;
  overflow: hidden;
}

.wp.payer-info .payer {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.wp.payer-info .payer .position {
  height: 64rpx;
}

.wp.payer-info .payer .arrow {
  height: 64rpx;
}

.wp.payer-info .payer .info {
  margin-left: 28rpx;
  margin-right: 20rpx;
}

.wp.payer-info .payer .info .name {
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.wp.payer-info .payer .info .address {
  font-size: 24rpx;
  color: #7E7E7E;
}



.pd.payer-info {
  margin: 0 30rpx;
  background-color: #fff;
  border-radius: 30rpx;
  overflow: hidden;
}

.pd.payer-info .express,
.pd.payer-info .payer {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.pd.payer-info .express {
  padding-right: 20rpx;
}

.pd.payer-info .express .car {
  height: 46rpx;
}

.pd.payer-info .express {
  border-bottom: 2rpx solid #E8E8E8;
}

.pd.payer-info .express .info {
  flex: 1;
  margin-left: 30rpx;
  margin-right: 10rpx;
}

.pd.payer-info .express .event {
  margin-bottom: 10rpx;
  font-size: 24rpx;
}

.pd.payer-info .express .date {
  font-size: 20rpx;
  color: #7E7E7E;
}

.pd.payer-info .express .arrow {
  height: 64rpx;
}

.pd.payer-info .payer .position {
  height: 64rpx;
}

.pd.payer-info .payer .info {
  margin-left: 30rpx;
}

.pd.payer-info .payer .name {
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.pd.payer-info .payer .address {
  font-size: 24rpx;
  color: #7e7e7e;
}

.produce-info {
  margin: 30rpx 0;
  padding: 0 30rpx;
  background-color: #fff;
}

.produce-info .shop {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #E8E8E8;
}

.produce-info .shop .icon {
  display: block;
  margin-right: 20rpx;
  width: 60rpx;
}

.produce-info .shop .name {
  font-size: 28rpx;
}

.produce-info .info {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #F2F2F2;
}

.produce-info .show-img {
  display: block;
  margin-right: 20rpx;
  width: 200rpx;
  height: 200rpx;
}

.produce-info .right-side {
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
  align-items: flex-start;
}

.produce-info .title-wrap .symbol {
  float: left;
  margin-top: 6rpx;
  margin-right: 10rpx;
  padding: 0.1em 0.5em;
  width: 4em;
  background-color: #F74833;
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #fff;
}

.produce-info .title-wrap .title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.produce-info .right-side .data {
  margin-top: 10rpx;
  padding: 0.2em 0.8em;
  background-color: #F2F2F2;
  border-radius: 1em;
  font-size: 20rpx;
}

.produce-info .right-side .pay-info {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  width: 100%;
  font-size: 32rpx;
}

.produce-info .pay-info .price{
  color: #F74833;
}

.produce-info .pay-info .price .s {
  font-size: 24rpx;
}

.produce-info .pay-info .sum {
  color: #7E7E7E;
}

.produce-info .btns {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 0;
}

.produce-info .btns .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 40rpx;
  width: 160rpx;
  height: 60rpx;
  border: 2rpx solid #7E7E7E;
  border-radius: 60rpx;
  font-size: 28rpx;
}



.area {
  margin: 30rpx 0;
  padding: 0 30rpx;
  background-color: #fff;
  overflow: hidden;
  font-size: 28rpx;
  color: #7E7E7E;
}

.area .stress {
  color: #222;
}

.area .price {
  color: #F9604E;
}

.area .row {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
}


.order-btm-wrap {
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 990;
}

.order-btm {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
}

.order-btn1,.order-btn2 {
  width: 160rpx;
  height: 60rpx;
  margin-left: 20rpx;
  border-radius: 6rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
}

.order-btn1 {
  border: 1px #e6e6e6 solid;
  color: #333;
}

.order-btn2 {
  background: #f32224;
  color: #fff;
}

.order-margin {
  height: 100rpx;
}
.shop_address{
  font-size: 28rpx;
  margin-left: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;  
  width: 70%;
  /* display: -webkit-box; */
  word-break: break-all;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;

}