
.select-popup {
	display: none;
	position: fixed;
	top: 100%;
	bottom: auto;
	width: 100%;
  z-index: 333;
	transition: all 1s;
}

.select-popup.show {
	display: block;
	top: auto;
	bottom: 0;
}

.mask {
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100vh;
	background: rgba(0, 0, 0, .5);
}

.select-head {
	align-items: flex-end;
	margin-top: -50rpx;
}

.select-img {
	width: 180rpx;
	height: 185rpx;
	background-color: #ffffff;
	border: solid 1px #f2f2f2;
}

.select-text {
	padding-left: 15rpx;
	font-size: 24rpx;
	color: #666;
}

.select-text .price {
	margin-bottom: 10rpx;
}

.option {
	padding: 25rpx 0;
}

.option-title {
	font-size: 25rpx;
	margin-bottom: 12rpx;
}

.option-item {
	width: 180rpx;
	height: 63rpx;
	text-align: center;
	line-height: 63rpx;
	margin-right: 20rpx;
	font-size: 29rpx;
	background-color: #F2F2F2;
	border-radius: 5rpx;
}

.option-item.selected {
	color: #fff;
	background-color: #cc2b00;
}

.select-num {
	padding: 20rpx 0;
}

.reduce-btn,
.add-btn {
	color: #0cd9ca;
	font-size: 50rpx;
}

.select-num .num {
	font-size: 41rpx;
	margin: 0 40rpx;
}

.close-btn {
	position: absolute;
	font-size: 56rpx;
	right: 3%;
	top: 10%;
	color: #b2b2b2;
}

.select-popup .select-btn {
	position: relative;
	left: -4%;
	line-height: 91rpx;
	text-align: center;
	font-size: 31rpx;
	color: #fff;
	transform: translateY(3rpx);
	width: 108%;
	height: 91rpx;
	background-color: #cc2b00;
	margin-top: 50rpx;
}

.select-content {
	border: 1px solid transparent;
	position: relative;
	z-index: 33;
	background: #fff;
	padding: 0 3%;
}

.hide{
  visibility: hidden;
}