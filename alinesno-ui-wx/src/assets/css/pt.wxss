
page {
  padding-bottom: 20%;
}

.flex-center {
  display: flex;
  align-items: center;
}

/* 弹窗 */

.popup {
  position: fixed;
  height: 100vh;
  width: 100%;
  z-index: 100;
  top: 0;
  left: 0;
  padding-top: 20vh;
}

.popup .mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.popup .content {
  position: relative;
  z-index: 1;
  background-color: #fff;
  border-radius: 10rpx;
}

/* 底部导航 */

.footer-nav {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  box-shadow: 0px -5rpx 5rpx 0px rgba(0, 0, 0, 0.05);
  padding-top: 10rpx;
}

.footer-nav .item {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #555;
  height: 100rpx;
  justify-content: center;
  flex-direction: column;
}

.footer-nav .item image {
  width: 22%;
  margin: 0 auto;
  display: block;
  margin-bottom: 4%;
}

.footer-nav .item .active-icon {
  display: none;
}

.footer-nav .active image {
  display: none;
}

.footer-nav .active .active-icon {
  display: block;
}

